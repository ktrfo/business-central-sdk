{
    "name": "ktr/business-central-sdk",
    "description": "Laravel SDK for Microsoft Business Central - Connect to Business Central web services with elegant model-based API",
    "keywords": [
        "ktr",
        "business-central",
        "business-central-sdk",
        "microsoft",
        "dynamics",
        "laravel",
        "sdk"
    ],
    "homepage": "https://github.com/ktrfo/business-central-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "John Eystein Johannesen",
            "email": "john.einstein@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "laravel/framework": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Ktr\\BusinessCentral\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ktr\\BusinessCentral\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "pint": "vendor/bin/pint",
        "pint-test": "vendor/bin/pint --test"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ktr\\BusinessCentral\\BusinessCentralServiceProvider"
            ],
            "aliases": {
                "BusinessCentral": "Ktr\\BusinessCentral\\Facade\\BusinessCentral"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
